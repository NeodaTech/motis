table TaxiPosition {
  lat: double;
  lng: double;
}

table Shift {
  start: int;
  stop: int;
}

table Area {
  Position: TaxiPosition;
  Radius: int;
}

table OndemandTaxiRequest {
  id:string;
  Shifts:[Shift];
  SupportedAreas:[Area];
}